                    <div class="pt-7 pb-2.5 px-4 text-[10px] font-extrabold text-gray-500 uppercase tracking-widest">Reports</div>

                    <NavLink href="sale-report" class="@GetNavLinkClass("sale-report")" @onclick="() => SetPage(EnumPage.SaleReport)">
