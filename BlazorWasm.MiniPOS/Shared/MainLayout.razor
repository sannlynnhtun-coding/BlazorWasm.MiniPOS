@using System.Text.RegularExpressions
@inherits LayoutComponentBase
@inject ChartStateContainer StateContainer

<div class="flex h-screen bg-background font-sans text-foreground overflow-hidden">
    <!-- Sidebar Overlay (Mobile) -->
    @if (isSidebarOpen)
    {
        <div class="fixed inset-0 bg-background/80 backdrop-blur-sm z-20 lg:hidden transition-opacity" @onclick="ToggleSidebar"></div>
    }

    <!-- Sidebar -->
    <aside class="max-lg:fixed max-lg:inset-y-0 max-lg:left-0 w-72 bg-card text-muted-foreground flex-shrink-0 flex flex-col transition-transform duration-300 border-r border-border shadow-sm z-30 @(isSidebarOpen ? "max-lg:translate-x-0" : "max-lg:-translate-x-full")">
        <div class="h-20 flex items-center px-8 border-b border-border">
            <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-primary rounded-xl flex items-center justify-center shadow-lg shadow-primary/20">
                    <svg class="w-6 h-6 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                </div>
                <div class="flex flex-col">
                    <span class="text-xl font-bold text-foreground tracking-tight leading-none">MiniPOS</span>
                    <span class="text-[10px] font-bold text-primary uppercase tracking-widest mt-1">Smart Retail</span>
                </div>
            </div>
        </div>

        <nav class="p-6 space-y-2 flex-grow overflow-y-auto hide-scrollbar">
            <NavLink href="" class="@GetNavLinkClass("")" Match="NavLinkMatch.All" @onclick="() => SetPage(EnumPage.Dashboard)">
                <svg class="w-5 h-5 mr-3 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
                <span class="font-medium text-sm">Dashboard</span>
            </NavLink>

            <NavLink href="Sale" class="@GetNavLinkClass("Sale")" @onclick="() => SetPage(EnumPage.Sale)">
                <svg class="w-5 h-5 mr-3 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/></svg>
                <span class="font-medium text-sm">Product Sale</span>
            </NavLink>

            <div class="pt-8 pb-3 px-4 text-[10px] font-bold text-muted-foreground uppercase tracking-[0.2em]">Inventory</div>
            
            <NavLink Match="NavLinkMatch.Prefix" href="setup/product" class="@GetNavLinkClass("setup/product")" @onclick="() => SetPage(EnumPage.Product)">
                <svg class="w-5 h-5 mr-3 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>
                <span class="font-medium text-sm">Products</span>
            </NavLink>

            <NavLink Match="NavLinkMatch.Prefix" href="setup/product-category" class="@GetNavLinkClass("setup/product-category")" @onclick="() => SetPage(EnumPage.ProductCategory)">
                <svg class="w-5 h-5 mr-3 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
                <span class="font-medium text-sm">Categories</span>
            </NavLink>

            <div class="pt-8 pb-3 px-4 text-[10px] font-bold text-muted-foreground uppercase tracking-[0.2em]">Insights</div>

            <NavLink href="sale-report" class="@GetNavLinkClass("sale-report")" @onclick="() => SetPage(EnumPage.SaleReport)">
                <svg class="w-5 h-5 mr-3 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                <span class="font-medium text-sm">Sale Reports</span>
            </NavLink>

            <div class="pt-8 pb-3 px-4 text-[10px] font-bold text-muted-foreground uppercase tracking-[0.2em]">Maintenance</div>

            <NavLink href="settings/db-provider" class="@GetNavLinkClass("settings/db-provider")" @onclick="() => SetPage(EnumPage.DbProvider)">
                <svg class="w-5 h-5 mr-3 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                <span class="font-medium text-sm">System Config</span>
            </NavLink>

            <NavLink href="generate-data" class="@GetNavLinkClass("generate-data")" @onclick="() => SetPage(EnumPage.GenerateData)">
                <svg class="w-5 h-5 mr-3 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
                <span class="font-medium text-sm">Reset Data</span>
            </NavLink>
        </nav>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <!-- Top Header -->
        <header class="h-20 bg-background/80 backdrop-blur-md border-b border-border flex items-center justify-between px-10 flex-shrink-0 z-10">
            <div class="flex items-center">
                <button @onclick="ToggleSidebar" class="lg:hidden btn btn-ghost btn-icon mr-6" aria-label="Toggle sidebar">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
                </button>
                <h1 class="text-2xl font-bold text-foreground tracking-tight animate-fade-in">
                    @Title
                </h1>
            </div>

            <div class="flex items-center space-x-8">
                <!-- Search -->
                <div class="hidden md:flex w-80">
                    <div class="search-shell w-full">
                        <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                        <input type="text" placeholder="Search anything..." class="search-input" />
                    </div>
                </div>

                <!-- Theme toggle -->
                <button type="button" class="btn btn-ghost btn-icon" onclick="window.toggleMiniPosTheme?.()" aria-label="Toggle theme">
                    <svg class="w-5 h-5 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2m0 14v2m9-9h-2M5 12H3m15.364-6.364-1.414 1.414M7.05 16.95l-1.414 1.414m0-11.314L7.05 7.05m9.9 9.9 1.414 1.414M12 8a4 4 0 100 8 4 4 0 000-8z" />
                    </svg>
                    <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 12.79A9 9 0 1111.21 3a7 7 0 109.79 9.79z" />
                    </svg>
                </button>

                <!-- Profile -->
                <div class="flex items-center space-x-4">
                    <div class="text-right hidden sm:block">
                        <div class="text-sm font-bold text-foreground leading-tight">Sann Lynn Htun</div>
                        <div class="text-[10px] font-bold text-primary uppercase tracking-widest mt-1">Super Admin</div>
                    </div>
                    <div class="w-11 h-11 rounded-2xl bg-primary flex items-center justify-center text-primary-foreground font-bold text-lg shadow-lg shadow-primary/20 cursor-pointer hover:scale-105 transition-transform">
                        S
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Body -->
        <main class="flex-1 overflow-y-auto hide-scrollbar p-4 sm:p-6 lg:p-10 bg-secondary/30">
            <div class="max-w-[1400px] mx-auto h-full">
                @if (isLoading)
                {
                    <div class="flex flex-col items-center justify-center h-full space-y-6">
                        <div class="w-12 h-12 border-[5px] border-primary/20 border-t-primary rounded-full animate-spin"></div>
                        <p class="text-muted-foreground font-medium text-sm tracking-widest uppercase animate-pulse">Processing</p>
                    </div>
                }
                else
                {
                    @Body
                }
            </div>
        </main>
    </div>
</div>

<style>
    .nav-item {
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        border-radius: var(--radius);
        color: hsl(var(--muted-foreground));
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        margin-bottom: 0.25rem;
    }
    
    .nav-item:hover {
        background-color: hsl(var(--accent));
        color: hsl(var(--accent-foreground));
    }
    
    .nav-item.active {
        background-color: hsl(var(--primary));
        color: hsl(var(--primary-foreground));
        font-weight: 600;
        box-shadow: 0 4px 12px -2px hsl(var(--primary) / 0.3);
    }

    .nav-item.active svg {
        color: inherit !important;
    }

    .nav-item svg {
        transition: color 0.2s;
        color: hsl(var(--muted-foreground));
    }

    .nav-item:hover svg {
        color: hsl(var(--accent-foreground));
    }
</style>

@code {
    private bool isLoading = false;
    private bool isSidebarOpen = false;
    private EnumPage Page = EnumPage.Dashboard;
    private string Title => InsertSpacesBeforeCapitals(Page.ToString());

    protected override void OnInitialized()
    {
        var currentUri = nav.ToBaseRelativePath(nav.Uri);
        
        if (string.IsNullOrEmpty(currentUri)) Page = EnumPage.Dashboard;
        else if (currentUri.StartsWith("Sale", StringComparison.OrdinalIgnoreCase)) Page = EnumPage.Sale;
        else if (currentUri.StartsWith("setup/product-category", StringComparison.OrdinalIgnoreCase)) Page = EnumPage.ProductCategory;
        else if (currentUri.StartsWith("setup/product", StringComparison.OrdinalIgnoreCase)) Page = EnumPage.Product;
        else if (currentUri.StartsWith("sale-report", StringComparison.OrdinalIgnoreCase)) Page = EnumPage.SaleReport;
        else if (currentUri.StartsWith("settings/db-provider", StringComparison.OrdinalIgnoreCase)) Page = EnumPage.DbProvider;
        else if (currentUri.StartsWith("generate-data", StringComparison.OrdinalIgnoreCase)) Page = EnumPage.GenerateData;
    }

    private void SetPage(EnumPage page)
    {
        Page = page;
        isSidebarOpen = false; // Close sidebar on navigation (mobile)
        StateContainer.DashboardShow = true;
    }

    private void ToggleSidebar()
    {
        isSidebarOpen = !isSidebarOpen;
    }

    private string GetNavLinkClass(string url)
    {
        return $"nav-item {(IsActiveUrl(url) ? "active" : "")}";
    }

    private bool IsActiveUrl(string url)
    {
        var currentUri = nav.ToBaseRelativePath(nav.Uri);
        return currentUri == url || (url != "" && currentUri.StartsWith(url));
    }

    private enum EnumPage
    {
        Dashboard,
        Sale,
        Product,
        ProductCategory,
        SaleReport,
        DbProvider,
        GenerateData
    }

    private static string InsertSpacesBeforeCapitals(string input)
    {
        if (string.IsNullOrEmpty(input)) return "";
        var pattern = @"(?<!^)(?=[A-Z])";
        var spaced = Regex.Replace(input, pattern, " ");
        if (spaced == "Db Provider") return "DB Provider";
        if (spaced == "Product Category") return "Categories";
        return spaced;
    }
}