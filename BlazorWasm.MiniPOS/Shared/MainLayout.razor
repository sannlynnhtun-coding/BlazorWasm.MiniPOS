                    </NavLink>

                    <NavLink Match="NavLinkMatch.Prefix" href="setup/product-category" class="@GetNavLinkClass("setup/product-category")" @onclick="() => SetPage(EnumPage.ProductCategory)">
                        <div class="nav-icon">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
