                @if (isLoading)
                {
                    <div class="flex flex-col items-center justify-center h-full space-y-6">
                        <div class="relative w-20 h-20">
                            <div class="absolute inset-0 border-4 border-premium-orange-100 rounded-2xl"></div>
                            <div class="absolute inset-0 border-4 border-premium-orange-500 border-t-transparent rounded-2xl animate-spin"></div>
                            <div class="absolute inset-5 bg-premium-orange-500/10 rounded-lg animate-pulse"></div>
                        </div>
                        <p class="text-gray-400 font-bold text-xs uppercase tracking-[0.3em] animate-pulse">Synchronizing Data</p>
                    </div>
                }
                else
                {
                    @Body
                }
            </div>
        </main>
    </div>
</div>

<style>
    .nav-item {
        display: flex;
        align-items: center;
        padding: 1rem 1.25rem;
        border-radius: 1.25rem;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        position: relative;
        overflow: hidden;
        margin-bottom: 0.5rem;
    }
    
    .nav-item::before {
        content: '';
        position: absolute;
        left: 0;
        top: 25%;
        height: 50%;
        width: 4px;
        background: linear-gradient(to bottom, #f97316, #ea580c);
        transform: translateX(-100%);
        transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        border-radius: 0 10px 10px 0;
    }
    
    .nav-item:hover {
        background: rgba(255, 255, 255, 0.03);
        transform: translateX(4px);
        color: white;
    }
    
    .nav-item.active {
        background: linear-gradient(to right, rgba(249, 115, 22, 0.15), rgba(249, 115, 22, 0.05));
        color: white;
        transform: translateX(6px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
    
    .nav-item.active::before {
        transform: translateX(0);
    }
    
    .nav-item.active .nav-icon {
        background: linear-gradient(135deg, #f97316, #ea580c);
        color: white;
        box-shadow: 0 10px 20px rgba(249, 115, 22, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.3);
        transform: scale(1.1);
    }
    
    .nav-icon {
        width: 3.25rem;
        height: 3.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 1.1rem;
        margin-right: 1.25rem;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.03);
    }
    
    .nav-item:hover .nav-icon {
        background: rgba(249, 115, 22, 0.2);
        transform: scale(1.05) rotate(3deg);
        border-color: rgba(249, 115, 22, 0.3);
    }
</style>

@code {
    private bool isLoading = false;
    private EnumPage Page = EnumPage.Dashboard;
    private string Title => InsertSpacesBeforeCapitals(Page.ToString());

    private void SetPage(EnumPage page)
    {
        Page = page;
        StateContainer.DashboardShow = true;
    }

    private string GetNavLinkClass(string url)
    {
        return $"nav-item {(IsActiveUrl(url) ? "active" : "")}";
    }

    private bool IsActiveUrl(string url)
    {
        var currentUri = nav.ToBaseRelativePath(nav.Uri);
        return currentUri == url || (url != "" && currentUri.StartsWith(url));
    }

    private enum EnumPage
    {
        Dashboard,
        Sale,
        Product,
        ProductCategory,
        SaleReport,
        DbProvider,
        GenerateData
    }

    private static string InsertSpacesBeforeCapitals(string input)
    {
        if (string.IsNullOrEmpty(input)) return "";
        var pattern = @"(?<!^)(?=[A-Z])";
        return Regex.Replace(input, pattern, " ");
    }
}