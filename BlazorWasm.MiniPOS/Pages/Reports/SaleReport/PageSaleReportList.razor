@if (Type == EnumFormType.List)
{
    <div class="space-y-8 animate-fade-in max-w-[1200px] mx-auto pb-8">
        <div class="glass-card bg-white overflow-hidden hover:transform-none">
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm whitespace-nowrap">
                    <thead>
                        <tr class="bg-slate-50/50 border-b border-slate-100">
                            <th class="px-8 py-5 font-black text-slate-400 uppercase tracking-widest text-[10px]">Reference</th>
                            <th class="px-8 py-5 font-black text-slate-400 uppercase tracking-widest text-[10px]">Net Revenue</th>
                            <th class="px-8 py-5 font-black text-slate-400 uppercase tracking-widest text-[10px]">Transaction Time</th>
                            <th class="px-8 py-5 font-black text-slate-400 uppercase tracking-widest text-[10px] text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-50">
                        @if (Model?.lstSaleReport != null)
                        {
                            @foreach (var item in Model.lstSaleReport)
                            {
                                DateTime = item.sale_date;
                                <tr class="hover:bg-orange-50/30 transition-colors group animate-fade-in">
                                    <td class="px-8 py-6">
                                        <div class="flex items-center space-x-4">
                                            <div class="w-10 h-10 rounded-xl orange-gradient-soft text-orange-600 flex items-center justify-center font-black text-xs shadow-sm">
                                                V
                                            </div>
                                            <span class="font-bold text-slate-900 font-mono text-base">@item.sale_voucher_no</span>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6">
                                        <div class="font-black text-slate-900 text-base">@item.sale_total_amount.ToString("N0") <span class="text-[10px] text-slate-400 ml-1 uppercase">MMK</span></div>
                                    </td>
                                    <td class="px-8 py-6">
                                        <div class="text-slate-500 font-bold text-xs uppercase tracking-wider">@item.sale_date.ToString("MMM dd â€¢ HH:mm")</div>
                                    </td>
                                    <td class="px-8 py-6 text-right">
                                        <button @onclick="() => Deatil(item)" class="inline-flex items-center px-5 py-2.5 bg-white border border-slate-200 hover:border-orange-500 hover:text-orange-600 text-slate-600 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all shadow-sm active:scale-95 group-hover:shadow-md">
                                            Audit Details
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                             <tr>
                                <td colspan="4" class="px-8 py-20 text-center">
                                    <div class="w-10 h-10 border-4 border-orange-100 border-t-orange-500 rounded-full animate-spin mx-auto mb-4"></div>
                                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Compiling Transaction Data</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (Model != null && Model.TotalPageNo > 1)
            {
                <div class="px-8 py-6 border-t border-slate-100 flex justify-center bg-slate-50/30">
                    <div class="flex items-center space-x-3">
                        @{
                            var curPage = Model.CurrentPageNo;
                            var totalP = Model.TotalPageNo;
                        }

                        <button @onclick="() => PageChanged(curPage - 1)" 
                                disabled="@(curPage <= 1)"
                                class="p-3 border border-slate-200 rounded-xl text-slate-400 hover:bg-white hover:text-slate-900 bg-white disabled:opacity-30 disabled:cursor-not-allowed transition-all shadow-sm">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
                        </button>

                        @for (int i = 1; i <= totalP; i++)
                        {
                            var p = i;
                            <button @onclick="() => PageChanged(p)"
                                    class="w-11 h-11 flex items-center justify-center rounded-xl border text-sm font-black transition-all @(curPage == p ? "orange-gradient text-white border-transparent shadow-lg shadow-orange-500/20" : "border-slate-200 text-slate-500 hover:border-orange-300 hover:bg-white bg-white shadow-sm")">
                                @p
                            </button>
                        }

                        <button @onclick="() => PageChanged(curPage + 1)" 
                                disabled="@(curPage >= totalP)"
                                class="p-3 border border-slate-200 rounded-xl text-slate-400 hover:bg-white hover:text-slate-900 bg-white disabled:opacity-30 disabled:cursor-not-allowed transition-all shadow-sm">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
}
else if (Type == EnumFormType.Report)
{
    <div class="max-w-xl mx-auto space-y-8 animate-slide-up pb-12">
        <div class="flex items-center justify-between mb-2">
            <button @onclick="Back" class="p-3 -ml-3 text-slate-400 hover:text-slate-900 transition-all rounded-xl hover:bg-white border border-transparent hover:border-slate-200 flex items-center text-xs font-black uppercase tracking-widest shadow-sm group">
                <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
                Audit Log
            </button>
        </div>

        <div class="glass-card bg-white relative overflow-hidden p-1 shadow-2xl shadow-black/5 hover:transform-none">
            <div class="bg-white rounded-[1.25rem] border border-slate-50 shadow-inner">
                <!-- Receipt Header -->
                <div class="px-10 pt-10 pb-8 border-b border-dashed border-slate-200 text-center">
                    <div class="w-16 h-16 orange-gradient text-white mx-auto rounded-2xl flex items-center justify-center mb-6 shadow-xl shadow-orange-500/30">
                         <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                    </div>
                    <h3 class="text-2xl font-black text-slate-900 tracking-tight">MiniPOS Store</h3>
                    <p class="text-[10px] text-orange-500 font-bold uppercase tracking-[0.2em] mt-2">Verified Sale Receipt</p>
                    
                    <div class="grid grid-cols-2 gap-4 mt-10">
                        <div class="bg-slate-50/80 p-4 rounded-2xl border border-slate-100 flex flex-col items-start">
                            <span class="text-[9px] font-black uppercase tracking-widest text-slate-400 mb-1">Audit Ref</span>
                            <span class="text-xs font-black text-slate-900 font-mono">#@DateTime.Ticks.ToString().Substring(0, 8)</span>
                        </div>
                        <div class="bg-slate-50/80 p-4 rounded-2xl border border-slate-100 flex flex-col items-start">
                            <span class="text-[9px] font-black uppercase tracking-widest text-slate-400 mb-1">Timestamp</span>
                            <span class="text-xs font-black text-slate-900">@DateTime.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>

                <!-- Receipt Items -->
                <div class="px-10 py-8 space-y-6">
                    @if (Detail != null)
                    {
                        @foreach (var item in Detail)
                        {
                            <div class="flex justify-between items-start">
                                <div class="flex-1">
                                    <p class="text-sm font-bold text-slate-900 leading-tight">@item.product_name</p>
                                    <p class="text-slate-400 text-[10px] font-black mt-1 uppercase tracking-wider">@item.product_qty  &times;  @item.product_price.ToString("N0")</p>
                                </div>
                                <div class="font-black text-slate-900 text-sm text-right ml-4">
                                    @((item.product_price * item.product_qty).ToString("N0"))
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- Receipt Total -->
                <div class="px-10 pb-12 pt-8 border-t border-dashed border-slate-200 bg-slate-50/30">
                    <div class="flex justify-between items-center">
                        <span class="text-xs font-black text-slate-400 uppercase tracking-[0.2em]">Grand Total</span>
                        <div class="text-right">
                            <span class="text-4xl font-black text-orange-600 tracking-tighter">
                                @(Detail?.Select(x => x.product_qty * x.product_price).Sum().ToString("N0") ?? "0")
                            </span>
                            <span class="text-[10px] font-black text-orange-400 ml-1 uppercase">MMK</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Receipt Cutouts -->
            <div class="absolute left-0 top-[312px] w-4 h-8 bg-slate-50 rounded-r-full border-y border-r border-slate-200 -ml-[1px]"></div>
            <div class="absolute right-0 top-[312px] w-4 h-8 bg-slate-50 rounded-l-full border-y border-l border-slate-200 -mr-[1px]"></div>
        </div>
    </div>
}
}

@code {
    [Parameter]
    public SaleReportResponseDataModel? Model { get; set; }

    private List<SaleVoucherDetailDataModel>? Detail { get; set; } = new();
    private EnumFormType Type { get; set; } = EnumFormType.List;
    private DateTime DateTime { get; set; }

    [Parameter]
    public EventCallback<SaleVoucherHeadDataModel> OnDetailClick { get; set; }

    [Parameter]
    public EventCallback<SaleVoucherHeadDataModel> OnBackClick { get; set; }

    async Task PageChanged(int pageNo)
    {
        var result = await db.SaleReportPagination(pageNo, 5, DateTime);
        Model = result;
    }

    async Task Deatil(SaleVoucherHeadDataModel data)
    {
        Type = EnumFormType.Report;
        Detail = await db.GetVoucherDetail(data.sale_voucher_head_id);
        await OnDetailClick.InvokeAsync(data);
    }

    async Task Back()
    {
        Type = EnumFormType.List;
        await OnBackClick.InvokeAsync();
    }
}