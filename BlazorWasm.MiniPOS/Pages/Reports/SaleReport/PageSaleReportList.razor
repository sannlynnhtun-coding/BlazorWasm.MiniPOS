@if (Type == EnumFormType.List)
{
    <div class="space-y-6 animate-fade-in max-w-[1200px] mx-auto pb-8">
        <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm whitespace-nowrap">
                    <thead class="bg-slate-50 border-b border-slate-200">
                        <tr>
                            <th class="px-6 py-4 font-semibold text-slate-700">Voucher Reference</th>
                            <th class="px-6 py-4 font-semibold text-slate-700">Amount (MMK)</th>
                            <th class="px-6 py-4 font-semibold text-slate-700">Date & Time</th>
                            <th class="px-6 py-4 font-semibold text-slate-700 text-right">Details</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        @if (Model?.lstSaleReport != null)
                        {
                            @foreach (var item in Model.lstSaleReport)
                            {
                                DateTime = item.sale_date;
                                <tr class="hover:bg-slate-50/50 transition-colors group">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center space-x-3">
                                            <div class="w-8 h-8 rounded bg-orange-50 border border-orange-100 text-orange-600 flex items-center justify-center font-bold text-xs">
                                                V
                                            </div>
                                            <span class="font-medium text-slate-900 font-mono">@item.sale_voucher_no</span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="font-semibold text-slate-900">@item.sale_total_amount.ToString("N0")</span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="text-slate-600">@item.sale_date.ToString("MMM dd, yyyy \u2022 HH:mm")</span>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <button @onclick="() => Deatil(item)" class="inline-flex items-center px-3 py-1.5 border border-slate-200 bg-white hover:bg-slate-50 text-slate-700 text-xs font-medium rounded-md transition-colors shadow-sm">
                                            View Details
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            
            @if (Model != null && Model.TotalPageNo > 1)
            {
                <div class="px-6 py-4 border-t border-slate-200 flex justify-center bg-slate-50/50">
                    <div class="flex items-center space-x-2">
                        @{
                            var curPage = Model.CurrentPageNo;
                            var totalP = Model.TotalPageNo;
                        }

                        <button @onclick="() => PageChanged(curPage - 1)" 
                                disabled="@(curPage <= 1)"
                                class="p-2 border border-slate-200 rounded-lg text-slate-500 hover:bg-white hover:text-slate-700 bg-transparent disabled:opacity-50 disabled:bg-slate-100 disabled:cursor-not-allowed transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
                        </button>

                        @for (int i = 1; i <= totalP; i++)
                        {
                            var p = i;
                            <button @onclick="() => PageChanged(p)"
                                    class="w-9 h-9 flex items-center justify-center rounded-lg border text-sm font-medium transition-colors @(curPage == p ? "bg-orange-600 border-orange-600 text-white" : "border-slate-200 text-slate-600 hover:border-orange-300 hover:bg-orange-50 bg-white")">
                                @p
                            </button>
                        }

                        <button @onclick="() => PageChanged(curPage + 1)" 
                                disabled="@(curPage >= totalP)"
                                class="p-2 border border-slate-200 rounded-lg text-slate-500 hover:bg-white hover:text-slate-700 bg-transparent disabled:opacity-50 disabled:bg-slate-100 disabled:cursor-not-allowed transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
}
else if (Type == EnumFormType.Report)
{
    <div class="max-w-xl mx-auto space-y-6 animate-fade-in pb-10">
        <div class="flex items-center justify-between mb-4">
            <button @onclick="Back" class="p-2 -ml-2 text-slate-500 hover:text-slate-900 transition-colors rounded-lg hover:bg-slate-100 flex items-center text-sm font-medium">
                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
                Back to List
            </button>
        </div>

        <div class="bg-white rounded-xl border border-slate-200 shadow-sm relative overflow-hidden">
            <!-- Receipt Header -->
            <div class="px-8 pt-8 pb-6 border-b border-dashed border-slate-200 text-center">
                <div class="w-12 h-12 bg-orange-50 text-orange-600 mx-auto rounded-xl flex items-center justify-center mb-4">
                     <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900">MiniPOS Store</h3>
                <p class="text-sm text-slate-500 mt-1">Sale Receipt</p>
                
                <div class="flex justify-between items-center mt-6 text-xs font-mono text-slate-500 bg-slate-50 p-3 rounded-lg border border-slate-100">
                    <div class="text-left">
                        <span class="block font-sans text-[10px] uppercase tracking-wider mb-0.5 text-slate-400">Order Ref</span>
                        #TRX-@DateTime.Ticks.ToString().Substring(0, Math.Min(DateTime.Ticks.ToString().Length, 8))
                    </div>
                    <div class="text-right">
                        <span class="block font-sans text-[10px] uppercase tracking-wider mb-0.5 text-slate-400">Date</span>
                        @DateTime.ToString("MMM dd, yyyy")
                    </div>
                </div>
            </div>

            <!-- Receipt Items -->
            <div class="px-8 py-6 space-y-4">
                @if (Detail != null)
                {
                    @foreach (var item in Detail)
                    {
                        <div class="flex justify-between items-start text-sm">
                            <div class="flex-1">
                                <p class="font-medium text-slate-900">@item.product_name</p>
                                <p class="text-slate-500 text-xs mt-0.5">@item.product_qty  \&times;  @item.product_price.ToString("N0")</p>
                            </div>
                            <div class="font-medium text-slate-900 text-right">
                                @((item.product_price * item.product_qty).ToString("N0"))
                            </div>
                        </div>
                    }
                }
            </div>

            <!-- Receipt Total -->
            <div class="px-8 pb-8 pt-6 border-t border-dashed border-slate-200 bg-slate-50/50">
                <div class="flex justify-between items-end">
                    <span class="text-sm font-medium text-slate-500 uppercase tracking-widest">Total Amount</span>
                    <div class="text-right">
                        <span class="text-2xl font-bold text-orange-600">
                            @(Detail?.Select(x => x.product_qty * x.product_price).Sum().ToString("N0") ?? "0")
                        </span>
                        <span class="text-xs font-medium text-slate-500 ml-1">MMK</span>
                    </div>
                </div>
            </div>
            
            <!-- Receipt Cutouts -->
            <div class="absolute left-0 top-[200px] w-3 h-6 bg-slate-50 rounded-r-full border-y border-r border-slate-200 -ml-[1px]"></div>
            <div class="absolute right-0 top-[200px] w-3 h-6 bg-slate-50 rounded-l-full border-y border-l border-slate-200 -mr-[1px]"></div>
        </div>
    </div>
}

@code {
    [Parameter]
    public SaleReportResponseDataModel? Model { get; set; }

    private List<SaleVoucherDetailDataModel>? Detail { get; set; } = new();
    private EnumFormType Type { get; set; } = EnumFormType.List;
    private DateTime DateTime { get; set; }

    [Parameter]
    public EventCallback<SaleVoucherHeadDataModel> OnDetailClick { get; set; }

    [Parameter]
    public EventCallback<SaleVoucherHeadDataModel> OnBackClick { get; set; }

    async Task PageChanged(int pageNo)
    {
        var result = await db.SaleReportPagination(pageNo, 5, DateTime);
        Model = result;
    }

    async Task Deatil(SaleVoucherHeadDataModel data)
    {
        Type = EnumFormType.Report;
        Detail = await db.GetVoucherDetail(data.sale_voucher_head_id);
        await OnDetailClick.InvokeAsync(data);
    }

    async Task Back()
    {
        Type = EnumFormType.List;
        await OnBackClick.InvokeAsync();
    }
}