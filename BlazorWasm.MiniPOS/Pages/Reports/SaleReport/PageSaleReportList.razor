@if (Type == EnumFormType.List)
{
    <div class="space-y-8 animate-fade-in max-w-[1200px] mx-auto pb-8">
        <div class="bg-card rounded-lg border border-border overflow-hidden shadow-sm">
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm whitespace-nowrap">
                    <thead>
                        <tr class="bg-muted/50 border-b border-border">
                            <th class="px-8 py-4 font-bold text-muted-foreground uppercase tracking-widest text-[10px]">Reference</th>
                            <th class="px-8 py-4 font-bold text-muted-foreground uppercase tracking-widest text-[10px]">Net Revenue</th>
                            <th class="px-8 py-4 font-bold text-muted-foreground uppercase tracking-widest text-[10px]">Transaction Time</th>
                            <th class="px-8 py-4 font-bold text-muted-foreground uppercase tracking-widest text-[10px] text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border">
                        @if (Model?.lstSaleReport?.Any() == true)
                        {
                            @foreach (var item in Model.lstSaleReport)
                            {
                                DateTime = item.sale_date;
                                <tr class="hover:bg-accent/50 transition-colors group animate-fade-in">
                                    <td class="px-8 py-6">
                                        <div class="flex items-center space-x-4">
                                            <div class="flex flex-col">
                                                <span class="font-bold text-foreground font-mono text-base tracking-tight">@item.sale_voucher_no</span>
                                                <span class="text-[9px] font-bold text-muted-foreground uppercase tracking-widest mt-1">Verified Voucher</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6">
                                        <div class="font-bold text-foreground text-lg">@item.sale_total_amount.ToString("N0") <span class="text-[10px] text-muted-foreground ml-1 uppercase font-bold">MMK</span></div>
                                    </td>
                                    <td class="px-8 py-6">
                                        <div class="flex flex-col">
                                            <div class="text-foreground font-bold text-sm">@item.sale_date.ToString("MMM dd, yyyy")</div>
                                            <div class="text-muted-foreground font-bold text-[10px] uppercase tracking-wider mt-1">@item.sale_date.ToString("HH:mm") • Clock-in</div>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 text-right">
                                        <button @onclick="() => Deatil(item)" class="btn btn-secondary text-xs uppercase tracking-widest font-bold">
                                            <svg class="w-3.5 h-3.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
                                            Audit Log
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else if (Model != null)
                        {
                            <tr>
                                <td colspan="4" class="px-8 py-20 text-center">
                                    <div class="w-16 h-16 bg-muted border border-border rounded-lg mx-auto mb-6 flex items-center justify-center text-muted-foreground/50">
                                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                        </svg>
                                    </div>
                                    <p class="text-xs font-bold text-foreground uppercase tracking-widest">No transactions found</p>
                                    <p class="text-[11px] font-medium text-muted-foreground mt-2">Try adjusting the date range and evaluate again.</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="px-8 py-20 text-center">
                                    <div class="w-8 h-8 border-4 border-primary/20 border-t-primary rounded-full animate-spin mx-auto mb-4"></div>
                                    <p class="text-xs font-bold text-muted-foreground uppercase tracking-widest">Compiling Transaction Data</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination footer -->
            @if (Model != null && Model.TotalPageNo > 1)
            {
                <div class="px-6 py-4 border-t border-border bg-muted/20">
                    <Pagination CurrentPage="@Model.CurrentPageNo"
                                TotalPages="@Model.TotalPageNo"
                                OnPageChanged="PageChanged" />
                </div>
            }
        </div>
    </div>
}
else if (Type == EnumFormType.Report)
{
    <div class="max-w-xl mx-auto space-y-6 animate-slide-up pb-12">
        <div class="flex items-center justify-between">
            <button @onclick="Back" class="btn btn-ghost text-xs uppercase tracking-widest font-bold">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" /></svg>
                Audit Log
            </button>
        </div>

        <div class="bg-card rounded-lg border border-border shadow-lg relative overflow-hidden">
            <div class="rounded-lg border border-border bg-card">
                <!-- Receipt Header -->
                <div class="px-10 pt-10 pb-8 border-b border-dashed border-border text-center">
                    <div class="w-16 h-16 bg-primary text-primary-foreground mx-auto rounded-lg flex items-center justify-center mb-6 shadow-md shadow-primary/20">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-foreground tracking-tight">MiniPOS Store</h3>
                    <p class="text-[10px] text-primary font-bold uppercase tracking-widest mt-2">Verified Sale Receipt</p>
                    
                    <div class="grid grid-cols-2 gap-4 mt-10">
                        <div class="bg-muted/50 p-4 rounded-lg border border-border flex flex-col items-start">
                            <span class="text-[9px] font-bold uppercase tracking-widest text-muted-foreground mb-1">Voucher No</span>
                            <span class="text-xs font-bold text-foreground font-mono">
                                #@(SelectedHead?.sale_voucher_no.ToString().Substring(0, 8) ?? "--------")
                            </span>
                        </div>
                        <div class="bg-muted/50 p-4 rounded-lg border border-border flex flex-col items-start">
                            <span class="text-[9px] font-bold uppercase tracking-widest text-muted-foreground mb-1">Timestamp</span>
                            <span class="text-xs font-bold text-foreground">@DateTime.ToString("MMM dd, yyyy • HH:mm")</span>
                        </div>
                    </div>
                </div>

                <!-- Receipt Items -->
                <div class="px-10 py-8 space-y-6">
                    @if (Detail?.Any() == true)
                    {
                        @foreach (var item in Detail)
                        {
                            <div class="flex justify-between items-start">
                                <div class="flex-1">
                                    <p class="text-sm font-bold text-foreground leading-tight">@item.product_name</p>
                                    <p class="text-muted-foreground text-[10px] font-bold mt-1 uppercase tracking-wider">@item.product_qty  &times;  @item.product_price.ToString("N0")</p>
                                </div>
                                <div class="font-bold text-foreground text-sm text-right ml-4">
                                    @((item.product_price * item.product_qty).ToString("N0"))
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="py-10 text-center">
                            <p class="text-xs font-bold text-muted-foreground uppercase tracking-widest">No line items</p>
                            <p class="text-[11px] font-medium text-muted-foreground/50 mt-2">This voucher has no recorded detail rows.</p>
                        </div>
                    }
                </div>

                <!-- Receipt Total -->
                <div class="px-10 pb-12 pt-8 border-t border-dashed border-border bg-muted/20">
                    <div class="flex justify-between items-center">
                        <span class="text-xs font-bold text-muted-foreground uppercase tracking-widest">Grand Total</span>
                        <div class="text-right">
                            <span class="text-4xl font-bold text-primary tracking-tighter">
                                @(Detail?.Select(x => x.product_qty * x.product_price).Sum().ToString("N0") ?? "0")
                            </span>
                            <span class="text-[10px] font-bold text-primary/70 ml-1 uppercase">MMK</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Receipt Cutouts -->
            <div class="absolute left-0 top-[312px] w-4 h-8 bg-background rounded-r-full border-y border-r border-border -ml-[2px] z-10"></div>
            <div class="absolute right-0 top-[312px] w-4 h-8 bg-background rounded-l-full border-y border-l border-border -mr-[2px] z-10"></div>
        </div>
    </div>
}

@code {
    [Parameter]
    public SaleReportResponseDataModel? Model { get; set; }

    private List<SaleVoucherDetailDataModel>? Detail { get; set; } = new();
    private SaleVoucherHeadDataModel? SelectedHead { get; set; }
    private EnumFormType Type { get; set; } = EnumFormType.List;
    private DateTime DateTime { get; set; }

    [Parameter]
    public EventCallback<SaleVoucherHeadDataModel> OnDetailClick { get; set; }

    [Parameter]
    public EventCallback<SaleVoucherHeadDataModel> OnBackClick { get; set; }

    async Task PageChanged(int pageNo)
    {
        var result = await db.SaleReportPagination(pageNo, 5, DateTime);
        Model = result;
    }

    async Task Deatil(SaleVoucherHeadDataModel data)
    {
        Type = EnumFormType.Report;
        SelectedHead = data;
        DateTime = data.sale_date;
        Detail = await db.GetVoucherDetail(data.sale_voucher_head_id);
        await OnDetailClick.InvokeAsync(data);
    }

    async Task Back()
    {
        Type = EnumFormType.List;
        SelectedHead = null;
        await OnBackClick.InvokeAsync();
    }
}