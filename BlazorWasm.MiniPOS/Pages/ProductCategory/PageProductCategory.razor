@page "/setup/product-category"

<div class="space-y-6 animate-fade-in max-w-[1200px] mx-auto pb-8">
    @if (FormType == EnumFormType.List)
    {
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-6 mb-8">
            <div>
                <h2 class="text-3xl font-bold text-foreground tracking-tight">Categories</h2>
                <p class="text-sm text-muted-foreground mt-2 font-medium">Manage and organize your product catalog.</p>
            </div>
            <button @onclick="Create" class="btn btn-primary font-bold">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/></svg>
                New Category
            </button>
        </div>

        <div class="bg-card rounded-lg border border-border overflow-hidden shadow-sm">
            @if (_productCategoryResponseModel?.productCategories == null)
            {
                <div class="p-20 text-center">
                    <div class="w-8 h-8 border-4 border-primary/20 border-t-primary rounded-full animate-spin mx-auto mb-4"></div>
                    <p class="text-[10px] font-bold text-muted-foreground uppercase tracking-widest">Loading records</p>
                </div>
            }
            else if (!_productCategoryResponseModel.productCategories.Any())
            {
                <div class="p-20 text-center flex flex-col items-center justify-center">
                    <div class="w-16 h-16 bg-muted rounded-full flex items-center justify-center text-muted-foreground mb-6">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
                    </div>
                    <h3 class="text-xl font-bold text-foreground mb-2">No categories yet</h3>
                    <p class="text-muted-foreground text-sm mb-8 max-w-xs mx-auto">Start by creating your first category to organize your products efficiently.</p>
                    <button @onclick="Create" class="btn btn-secondary font-bold">
                        Create Now
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                    </button>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="w-full text-left text-sm whitespace-nowrap">
                        <thead>
                            <tr class="bg-muted/50 border-b border-border">
                                <th class="px-6 py-4 font-bold text-muted-foreground uppercase tracking-widest text-[10px]">Identifier</th>
                                <th class="px-6 py-4 font-bold text-muted-foreground uppercase tracking-widest text-[10px]">Description</th>
                                <th class="px-6 py-4 font-bold text-muted-foreground uppercase tracking-widest text-[10px] text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-border">
                            @foreach (var item in _productCategoryResponseModel.productCategories)
                            {
                                <tr class="hover:bg-accent/50 transition-colors animate-fade-in group">
                                    <td class="px-6 py-4 w-40">
                                        <div class="inline-flex items-center px-2 py-1 rounded bg-muted text-foreground font-mono text-[10px] font-bold border border-border group-hover:bg-background transition-colors">
                                            @item.product_category_code
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="font-bold text-foreground text-sm">@item.product_category_name</span>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                            <button @onclick="() => Edit(item)" class="w-8 h-8 rounded-md flex items-center justify-center border border-border bg-background text-muted-foreground hover:text-primary hover:border-primary transition-all" title="Edit">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                                            </button>
                                            <button @onclick="() => Delete(item)" class="w-8 h-8 rounded-md flex items-center justify-center border border-border bg-background text-muted-foreground hover:text-destructive hover:border-destructive transition-all" title="Delete">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 01-1 1v3M4 7h16"/></svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination footer -->
                @if (_productCategoryResponseModel?.pageSetting != null && _productCategoryResponseModel.pageSetting.pageCount > 1)
                {
                    <div class="px-6 py-4 border-t border-border bg-muted/30">
                        <Pagination CurrentPage="@_productCategoryResponseModel.pageSetting.pageNo"
                                    TotalPages="@_productCategoryResponseModel.pageSetting.pageCount"
                                    OnPageChanged="@(p => List(p))" />
                    </div>
                }
            }
        </div>
    }
    else
    {
        <div class="max-w-2xl mx-auto animate-slide-up">
            <div class="flex items-center justify-between mb-8">
                <div class="flex items-center">
                    <button @onclick="Back" class="w-10 h-10 rounded-full flex items-center justify-center hover:bg-accent text-muted-foreground transition-colors mr-4" aria-label="Back">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
                    </button>
                    <div>
                        <h2 class="text-3xl font-bold text-foreground tracking-tight">@(IsEdit ? "Update Category" : "New Category")</h2>
                        <p class="text-sm text-muted-foreground mt-1 font-medium">Define category properties.</p>
                    </div>
                </div>
            </div>

            <div class="bg-card p-8 rounded-lg border border-border shadow-sm">
                <EditForm Model="_model" OnValidSubmit="HandleSave">
                    <div class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="space-y-2">
                                <label class="text-[10px] font-bold text-muted-foreground uppercase tracking-widest ml-1">
                                    Access Code
                                </label>
                                <InputText @bind-Value="_model.product_category_code" class="w-full px-4 py-2.5 bg-muted border border-border rounded-md text-sm font-bold text-foreground focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all disabled:opacity-60" disabled="@IsEdit" />
                            </div>
                            
                            <div class="space-y-2">
                                <label class="text-[10px] font-bold text-muted-foreground uppercase tracking-widest ml-1">
                                    Display Name
                                </label>
                                <InputText @bind-Value="_model.product_category_name" class="w-full px-4 py-2.5 bg-background border border-input rounded-md text-sm font-bold text-foreground focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" placeholder="e.g. Beverages" />
                            </div>
                        </div>

                        <div class="pt-6 border-t border-border flex justify-end items-center gap-4">
                            <button type="button" @onclick="Back" class="px-4 py-2 text-sm font-bold text-muted-foreground hover:text-foreground transition-colors">
                                Discard
                            </button>
                            <button type="submit" class="btn btn-primary font-bold">
                                @(IsEdit ? "Update Category" : "Save Category")
                            </button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    }
</div>
