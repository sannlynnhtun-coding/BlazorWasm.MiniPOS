@if (Model != null)
{
    <div class="overflow-x-auto">
        <table class="w-full text-left border-separate border-spacing-y-3">
            <thead>
                <tr class="text-xs font-bold text-gray-400 uppercase tracking-widest px-4">
                    <th class="pb-2 px-6">Product</th>
                    <th class="pb-2">Price</th>
                    <th class="pb-2">Qty</th>
                    <th class="pb-2">Total</th>
                    <th class="pb-2 text-right px-6">Actions</th>
                </tr>
            </thead>
            <tbody id="tbodySale">
                @foreach (var item in Model.lstProductSale)
                {
                    <tr class="group bg-white/50 hover:bg-white transition-all duration-200 shadow-sm hover:shadow-md rounded-2xl">
                        <td class="py-4 px-6 rounded-l-2xl border-y border-l border-transparent group-hover:border-gray-100">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-gray-100 text-gray-400 rounded-xl flex items-center justify-center mr-4 group-hover:bg-premium-orange-50 group-hover:text-premium-orange-500 transition-colors">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>
                                </div>
                                <div>
                                    <div class="font-bold text-gray-800">@item.product_name</div>
                                    <div class="text-xs text-gray-400 uppercase tracking-tighter">REF: @item.product_sale_id.ToString().Substring(0, 8)</div>
                                </div>
                            </div>
                        </td>
                        <td class="py-4 border-y border-transparent group-hover:border-gray-100 font-medium text-gray-600">
                            @item.product_price.ToString("N0")
                        </td>
                        <td class="py-4 border-y border-transparent group-hover:border-gray-100">
                            <span class="bg-gray-100 text-gray-600 px-3 py-1 rounded-lg text-xs font-bold">@item.product_qty</span>
                        </td>
                        <td class="py-4 border-y border-transparent group-hover:border-gray-100 font-bold text-gray-900">
                            @item.product_total_price.ToString("N0")
                        </td>
                        <td class="py-4 px-6 rounded-r-2xl border-y border-r border-transparent group-hover:border-gray-100 text-right">
                            <div class="flex items-center justify-end space-x-2">
                                <button type="button" @onclick="()=>Edit(item.product_sale_id)" 
                                        class="p-2 text-gray-400 hover:text-premium-orange-500 hover:bg-premium-orange-50 rounded-lg transition-all" title="Edit Item">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                                </button>
                                <button type="button" @onclick="()=>Delete(item.product_sale_id)"
                                        class="p-2 text-gray-400 hover:text-red-500 hover:bg-red-50 rounded-lg transition-all" title="Remove Item">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        <div class="mt-8 flex justify-center">
            <div class="flex items-center space-x-1">
                @{
                    var curPage = Model.CurrentPageNo;
                    var totalP = Model.TotalPageNo;
                }

                <button @onclick="() => PageChanged(curPage - 1)" 
                        disabled="@(curPage == 1)"
                        type="button"
                        class="p-2 rounded-lg border border-gray-100 text-gray-400 hover:text-premium-orange-500 hover:bg-premium-orange-50 disabled:opacity-50 transition-all">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M15 19l-7-7 7-7"/></svg>
                </button>

                @for (int i = 1; i <= totalP; i++)
                {
                    var p = i;
                    <button @onclick="() => PageChanged(p)"
                            type="button"
                            class="w-10 h-10 rounded-lg border @(curPage == p ? "bg-premium-orange-500 border-premium-orange-500 text-white shadow-lg shadow-premium-orange-500/20" : "border-gray-100 text-gray-500 hover:bg-premium-orange-50 hover:text-premium-orange-500") font-bold transition-all">
                        @p
                    </button>
                }

                <button @onclick="() => PageChanged(curPage + 1)" 
                        disabled="@(curPage == totalP)"
                        type="button"
                        class="p-2 rounded-lg border border-gray-100 text-gray-400 hover:text-premium-orange-500 hover:bg-premium-orange-50 disabled:opacity-50 transition-all">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 5l7 7-7 7"/></svg>
                </button>
            </div>
        </div>
    </div>
}

<style>
</style>

@code {
    [Parameter] public ProductSaleResponseDataModel? Model { get; set; }
    [Parameter] public EventCallback<Guid> OnDeleteProductSaleClick { get; set; }
    [Parameter] public EventCallback<Guid> OnEditProductSaleClick { get; set; }

    async Task PageChanged(int pageNo)
    {
        var result = await db.ProductSalePagination(pageNo, 5);
        Model = result;
    }

    async Task Delete(Guid guid)
    {
        await OnDeleteProductSaleClick.InvokeAsync(guid);
    }

    async Task Edit(Guid guid)
    {
        await OnEditProductSaleClick.InvokeAsync(guid);
    }
}
