@page "/Sale"

<div class="h-[calc(100vh-120px)] flex flex-col md:flex-row gap-8 pb-4 animate-fade-in overflow-hidden">
    <!-- Left Side: Product Grid (50%) -->
    <div class="flex-1 md:basis-1/2 flex flex-col glass-card bg-white overflow-hidden hover:transform-none">
        <div class="px-8 py-6 border-b border-slate-100 flex items-center justify-between bg-slate-50/30">
            <div>
                <h2 class="text-xl font-bold text-slate-900 tracking-tight">Products</h2>
                <p class="text-[10px] font-bold text-orange-500 uppercase tracking-widest mt-1">@(_lstProduct?.Count ?? 0) available</p>
            </div>
            <div class="relative w-80">
                <input type="text" placeholder="Search products..." class="w-full pl-10 pr-4 py-2.5 bg-white border border-slate-200 rounded-xl text-sm focus:outline-none focus:ring-4 focus:ring-orange-500/10 focus:border-orange-500/50 transition-all" />
                <svg class="w-4 h-4 absolute left-3.5 top-1/2 -translate-y-1/2 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
            </div>
        </div>

        <div class="p-8 overflow-y-auto hide-scrollbar flex-1 bg-white/50">
            <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                @if (_lstProduct is not null)
                {
                    @foreach (var item in _lstProduct)
                    {
                        var qty = GetQty(item.product_id);
                        var isActive = qty > 0;
                        
                        <button @onclick="() => AddProductToSale(item.product_id)" 
                                class="group relative flex flex-col p-5 rounded-2xl border transition-all duration-300 text-left overflow-hidden h-44 
                                       @(isActive ? "border-orange-500 bg-orange-50/50 shadow-lg shadow-orange-500/5" : "border-slate-100 bg-white hover:border-orange-200 hover:shadow-xl hover:shadow-black/5 hover:-translate-y-1")">
                            
                            @if (isActive)
                            {
                                <div class="absolute top-4 right-4 w-7 h-7 orange-gradient text-white rounded-full flex items-center justify-center text-xs font-black shadow-lg shadow-orange-500/30 animate-scale-in">
                                    @qty
                                </div>
                            }

                            <div class="text-[9px] font-bold text-slate-400 mb-2 uppercase tracking-widest line-clamp-1">#@(item.product_code ?? "UNK")</div>
                            <div class="font-bold text-slate-900 line-clamp-2 leading-tight flex-1 group-hover:text-orange-600 transition-colors">
                                @item.product_name
                            </div>
                            
                            <div class="mt-4 flex items-end justify-between w-full">
                                 <div class="font-black text-lg text-slate-900">
                                     @item.product_sale_price.ToString("N0") <span class="text-[10px] text-slate-400 font-bold ml-1">MMK</span>
                                 </div>
                            </div>
                        </button>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Right Side: Current Sale Cart (50%) -->
    <div class="flex-1 md:basis-1/2 flex flex-col glass-card bg-white overflow-hidden flex-shrink-0 hover:transform-none">
        <div class="px-8 py-6 border-b border-slate-100 bg-slate-50/30">
            <h3 class="text-xl font-bold text-slate-900 tracking-tight">Active Order</h3>
            <p class="text-[10px] font-bold text-orange-500 uppercase tracking-widest mt-1">
                @(_lstProductSale?.lstProductSale?.Count ?? 0) types in cart
            </p>
        </div>
        
        <div class="flex-1 overflow-y-auto p-6 space-y-3 hide-scrollbar bg-slate-50/20">
            @if (_lstProductSale?.lstProductSale?.Any() == true)
            {
                @foreach (var item in _lstProductSale.lstProductSale)
                {
                    <div class="group flex items-center bg-white border border-slate-100 rounded-2xl p-4 hover:border-orange-200 hover:shadow-lg hover:shadow-black/5 transition-all duration-300 animate-slide-up">
                        <div class="w-10 h-10 orange-gradient-soft text-orange-700 rounded-xl flex items-center justify-center text-sm font-black mr-4 flex-shrink-0">
                            @item.product_qty
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="text-sm font-bold text-slate-900 truncate">@item.product_name</div>
                            <div class="text-[11px] font-bold text-slate-400 mt-0.5">@item.product_price.ToString("N0") <span class="text-[9px]">MMK</span></div>
                        </div>
                        <div class="flex flex-col items-end pl-4 flex-shrink-0">
                            <div class="text-base font-black text-slate-900">@item.product_total_price.ToString("N0")</div>
                            <button @onclick="() => DeleteProductSale(item.product_sale_id)" class="text-slate-300 hover:text-red-500 transition-colors mt-2 p-1">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
                            </button>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="flex flex-col items-center justify-center h-full text-slate-400 py-20 space-y-4">
                    <div class="w-20 h-20 bg-slate-100 rounded-3xl flex items-center justify-center text-slate-300">
                        <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
                    </div>
                    <div class="text-center">
                        <p class="text-sm font-bold text-slate-600 uppercase tracking-widest">Cart is empty</p>
                        <p class="text-[11px] text-slate-400 mt-1 font-medium italic">Select products to begin</p>
                    </div>
                </div>
            }
        </div>

        <div class="p-8 border-t border-slate-100 bg-white">
            <div class="space-y-3 mb-8">
                <div class="flex justify-between items-center">
                    <span class="text-xs font-bold text-slate-500 uppercase tracking-wider">Subtotal</span>
                    <span class="text-sm font-bold text-slate-900">@_grandTotal.ToString("N0") <span class="text-[10px] font-bold text-slate-400 ml-1 uppercase">MMK</span></span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-xs font-bold text-slate-500 uppercase tracking-wider">Tax (0%)</span>
                    <span class="text-sm font-bold text-slate-900">0 <span class="text-[10px] font-bold text-slate-400 ml-1 uppercase">MMK</span></span>
                </div>
                <div class="pt-5 border-t border-slate-100 flex justify-between items-center">
                    <span class="text-sm font-bold text-slate-900 uppercase tracking-widest">Total Amount</span>
                    <div class="text-right">
                        <span class="text-3xl font-black text-orange-600">@_grandTotal.ToString("N0")</span>
                        <span class="text-xs font-extrabold text-orange-400 ml-1 uppercase">MMK</span>
                    </div>
                </div>
            </div>

            <button @onclick="Save" disabled="@(!(_lstProductSale?.lstProductSale?.Any() ?? false))" 
                    class="w-full py-4 px-6 orange-gradient hover:opacity-90 disabled:bg-slate-100 disabled:text-slate-400 disabled:from-slate-100 disabled:to-slate-100 disabled:cursor-not-allowed text-white text-sm font-black uppercase tracking-widest rounded-2xl transition-all flex items-center justify-center gap-3 shadow-xl shadow-orange-500/20 active:scale-95">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>
                Process Order
            </button>
        </div>
    </div>
</div>

@code {
    private int GetQty(Guid productId) => _lstProductSale?.lstProductSale?.FirstOrDefault(x => x.product_id == productId)?.product_qty ?? 0;

    private async Task ProductNameChangeEvent(ChangeEventArgs e)
    {
        if (Guid.TryParse(e.Value?.ToString(), out var id))
        {
            _model.product_id = id;
            await ProductNameChange(id);
        }
    }
}