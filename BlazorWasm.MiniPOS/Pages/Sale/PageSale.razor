@page "/Sale"

<div class="h-full min-h-0 flex flex-col md:flex-row gap-6 pb-4 animate-fade-in overflow-hidden">
    <!-- Left Side: Product Grid (55%) -->
    <div class="flex-1 md:basis-[55%] min-h-0 flex flex-col bg-card rounded-lg border border-border overflow-hidden">
        <div class="px-5 sm:px-6 lg:px-8 py-4 sm:py-5 border-b border-border bg-muted/30 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 flex-shrink-0">
            <div>
                <h2 class="text-lg sm:text-xl font-bold text-foreground tracking-tight">Products</h2>
                <p class="text-[10px] font-bold text-primary uppercase tracking-widest mt-1">@(_lstProduct?.Count ?? 0) available</p>
            </div>
            <div class="w-full sm:w-80">
                <div class="search-shell">
                    <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    <input type="text" placeholder="Search products..." class="search-input" />
                </div>
            </div>
        </div>

        <div class="p-5 sm:p-6 lg:p-8 overflow-y-auto custom-scrollbar flex-1 min-h-0 bg-card/50">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
                @if (_productResponseModel?.products is not null)
                {
                    @foreach (var item in _productResponseModel.products)
                    {
                        var qty = GetQty(item.product_id);
                        var isActive = qty > 0;
                        
                        <button @onclick="() => AddProductToSale(item.product_id)" 
                                class="group relative flex flex-col p-6 rounded-lg border transition-all duration-300 text-left overflow-hidden h-48
                                       @(isActive ? "border-primary bg-primary/5 shadow-lg shadow-primary/10" : "border-border bg-card hover:border-primary/50 hover:bg-accent/50 hover:shadow-md")">
                            
                            @if (isActive)
                            {
                                <div class="absolute top-4 right-4 flex items-center gap-2 animate-scale-in">
                                    <div class="px-2.5 h-6 bg-primary text-primary-foreground rounded-full flex items-center justify-center text-[10px] font-bold shadow-sm">
                                        @qty
                                    </div>
                                    <div class="w-6 h-6 bg-background rounded-full flex items-center justify-center text-primary shadow-sm border border-primary/20">
                                        <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                    </div>
                                </div>
                            }

                            <div class="text-[9px] font-bold text-muted-foreground mb-2 uppercase tracking-widest opacity-70 group-hover:opacity-100 transition-opacity">#@(item.product_code ?? "UNK")</div>
                            <div class="font-bold text-foreground text-base line-clamp-2 leading-snug flex-1 group-hover:text-primary transition-colors">
                                @item.product_name
                            </div>
                            
                            <div class="mt-4 flex items-end justify-between w-full">
                                 <div class="font-bold text-xl text-foreground tracking-tight">
                                     @item.product_sale_price.ToString("N0") <span class="text-[10px] text-muted-foreground font-medium ml-1 uppercase">MMK</span>
                                 </div>
                                 <div class="w-8 h-8 rounded-md bg-secondary text-secondary-foreground group-hover:bg-primary group-hover:text-primary-foreground flex items-center justify-center transition-all group-hover:scale-105">
                                     <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/></svg>
                                 </div>
                            </div>
                        </button>
                    }
                }
            </div>
        </div>

        <!-- Pagination Controls -->
        @if (_productResponseModel?.pageSetting != null && _productResponseModel.pageSetting.pageCount > 1)
        {
            <div class="px-5 sm:px-6 lg:px-8 py-3 sm:py-4 border-t border-border bg-muted/20">
                <Pagination CurrentPage="@_productResponseModel.pageSetting.pageNo"
                            TotalPages="@_productResponseModel.pageSetting.pageCount"
                            MaxButtonsMobile="5"
                            MaxButtonsDesktop="5"
                            OnPageChanged="@(p => List(p))" />
            </div>
        }
    </div>

    <!-- Right Side: Current Sale Cart (45%) -->
    <div class="flex-1 md:basis-[45%] min-h-0 flex flex-col bg-card rounded-lg border border-border overflow-hidden">
        <div class="px-5 sm:px-6 lg:px-8 py-4 sm:py-5 border-b border-border bg-muted/30">
            <h3 class="text-lg sm:text-xl font-bold text-foreground tracking-tight">Active Order</h3>
            <p class="text-[10px] font-bold text-primary uppercase tracking-widest mt-1">
                @(_lstProductSale?.lstProductSale?.Count ?? 0) items in cart
            </p>
        </div>
        
        <div class="flex-1 min-h-0 overflow-y-auto p-5 sm:p-6 lg:p-8 space-y-3 custom-scrollbar bg-accent/5">
            @if (_lstProductSale?.lstProductSale?.Any() == true)
            {
                @foreach (var item in _lstProductSale.lstProductSale)
                {
                    <div class="group flex items-center bg-card border border-border rounded-lg p-4 hover:border-primary/30 hover:shadow-sm transition-all animate-slide-up">
                        <div class="w-10 h-10 bg-muted text-foreground border border-border rounded-md flex items-center justify-center text-xs font-bold mr-4 flex-shrink-0 group-hover:bg-primary/10 group-hover:text-primary group-hover:border-primary/20 transition-colors">
                            @item.product_qty
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="text-[13px] font-bold text-foreground truncate">@item.product_name</div>
                            <div class="text-[10px] font-medium text-muted-foreground mt-0.5 uppercase tracking-wide">@item.product_price.ToString("N0") <span class="text-[8px]">MMK</span></div>
                        </div>
                        <div class="flex flex-col items-end pl-4 flex-shrink-0 border-l border-border ml-4">
                            <div class="text-sm font-bold text-foreground">@item.product_total_price.ToString("N0")</div>
                            <button @onclick="() => DeleteProductSale(item.product_sale_id)" class="text-destructive hover:text-destructive/80 mt-1 opacity-0 group-hover:opacity-100 transition-all p-1">
                                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 01-1 1v3M4 7h16"/></svg>
                            </button>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="flex flex-col items-center justify-center h-full text-muted-foreground py-20 space-y-4">
                    <div class="w-16 h-16 bg-muted rounded-full flex items-center justify-center text-muted-foreground/50 border border-border/50">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/></svg>
                    </div>
                    <div class="text-center">
                        <p class="text-[11px] font-bold uppercase tracking-widest">Cart is empty</p>
                        <p class="text-[10px] text-muted-foreground/70 mt-1">Select items to start a sale</p>
                    </div>
                </div>
            }
        </div>

        <div class="p-6 sm:p-8 border-t border-border bg-card">
            <div class="space-y-3 mb-6">
                <div class="flex justify-between items-center text-xs">
                    <span class="text-muted-foreground font-medium">Subtotal</span>
                    <span class="font-bold text-foreground">@_grandTotal.ToString("N0") <span class="text-[10px] text-muted-foreground ml-1">MMK</span></span>
                </div>
                <div class="flex justify-between items-center text-xs">
                    <span class="text-muted-foreground font-medium">Fee</span>
                    <span class="text-primary font-bold">Free</span>
                </div>
                <div class="pt-4 border-t border-dashed border-border flex justify-between items-end">
                    <div class="flex flex-col">
                         <span class="text-xs font-bold text-foreground uppercase tracking-widest mb-1">Total Due</span>
                         <span class="text-[9px] font-medium text-muted-foreground uppercase">Inc. Taxes</span>
                    </div>
                    <div class="text-right">
                        <span class="text-3xl font-bold text-foreground tracking-tight">@_grandTotal.ToString("N0")</span>
                        <span class="text-[10px] font-bold text-primary ml-1 uppercase">MMK</span>
                    </div>
                </div>
            </div>

            <button @onclick="Save" disabled="@(!(_lstProductSale?.lstProductSale?.Any() ?? false))"
                    class="w-full btn btn-primary btn-lg font-bold tracking-widest uppercase">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                Complete Transaction
            </button>
        </div>
    </div>
</div>

@code {
    private int GetQty(Guid productId) => _lstProductSale?.lstProductSale?.FirstOrDefault(x => x.product_id == productId)?.product_qty ?? 0;

    private async Task ProductNameChangeEvent(ChangeEventArgs e)
    {
        if (Guid.TryParse(e.Value?.ToString(), out var id))
        {
            _model.product_id = id;
            await ProductNameChange(id);
        }
    }
}