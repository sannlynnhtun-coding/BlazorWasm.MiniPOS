@page "/Sale"

<div class="h-[calc(100vh-80px)] flex flex-col md:flex-row gap-6 pb-6 animate-fade-in overflow-hidden">
    <!-- Left Side: Product Grid (50%) -->
    <div class="flex-1 md:basis-1/2 flex flex-col bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 flex items-center justify-between bg-slate-50/50">
            <div>
                <h2 class="text-lg font-semibold text-slate-900">Products</h2>
                <p class="text-xs text-orange-900/40 mt-0.5">@(_lstProduct?.Count ?? 0) items available</p>
            </div>
            <div class="relative w-72">
                <input type="text" placeholder="Search products..." class="w-full pl-9 pr-4 py-2 bg-white border border-slate-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500" />
                <svg class="w-4 h-4 absolute left-3 top-1/2 -translate-y-1/2 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
            </div>
        </div>

        <div class="p-6 overflow-y-auto hide-scrollbar flex-1">
            <div class="grid grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-4">
                @if (_lstProduct is not null)
                {
                    @foreach (var item in _lstProduct)
                    {
                        var qty = GetQty(item.product_id);
                        var isActive = qty > 0;
                        
                        <button @onclick="() => AddProductToSale(item.product_id)" 
                                class="relative flex flex-col p-4 rounded-xl border transition-all text-left overflow-hidden h-40 
                                       @(isActive ? "border-orange-500 bg-orange-50/50 shadow-sm" : "border-slate-200 bg-white hover:border-orange-300 hover:shadow-sm")">
                            
                            @if (isActive)
                            {
                                <div class="absolute top-3 right-3 w-6 h-6 bg-orange-600 text-white rounded-full flex items-center justify-center text-xs font-bold shadow">
                                    @qty
                                </div>
                            }

                            <div class="text-[10px] font-medium text-orange-900/40 mb-1 line-clamp-1">#@(item.product_code ?? "UNK")</div>
                            <div class="font-medium text-slate-900 line-clamp-2 leading-tight flex-1">
                                @item.product_name
                            </div>
                            
                            <div class="mt-2 flex items-end justify-between w-full">
                                 <div class="font-semibold text-orange-600">
                                     @item.product_sale_price.ToString("N0") <span class="text-[10px] text-slate-500 font-normal">MMK</span>
                                 </div>
                            </div>
                        </button>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Right Side: Current Sale Cart (50%) -->
    <div class="flex-1 md:basis-1/2 flex flex-col bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden flex-shrink-0">
        <div class="px-6 py-4 border-b border-slate-200 bg-slate-50/50">
            <h3 class="text-lg font-semibold text-slate-900">Current Order</h3>
            <p class="text-xs text-orange-900/40 mt-0.5">
                @(_lstProductSale?.lstProductSale?.Count ?? 0) items in cart
            </p>
        </div>
        
        <div class="flex-1 overflow-y-auto p-4 space-y-2 hide-scrollbar bg-slate-50/30">
            @if (_lstProductSale?.lstProductSale?.Any() == true)
            {
                @foreach (var item in _lstProductSale.lstProductSale)
                {
                    <div class="group flex items-center bg-white border border-slate-200 rounded-lg p-3 hover:border-slate-300 transition-colors">
                        <div class="w-8 h-8 bg-orange-100 text-orange-700 rounded-md flex items-center justify-center text-xs font-bold mr-3 flex-shrink-0">
                            @item.product_qty
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="text-sm font-medium text-slate-900 truncate">@item.product_name</div>
                            <div class="text-xs text-slate-500">@item.product_price.ToString("N0") <span class="text-[9px]">MMK</span></div>
                        </div>
                        <div class="flex flex-col items-end pl-3 flex-shrink-0">
                            <div class="text-sm font-semibold text-slate-900">@item.product_total_price.ToString("N0")</div>
                            <button @onclick="() => DeleteProductSale(item.product_sale_id)" class="text-slate-300 hover:text-red-500 transition-colors mt-1">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
                            </button>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="flex flex-col items-center justify-center h-full text-slate-400 py-16">
                    <svg class="w-12 h-12 mb-3 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
                    <p class="text-sm font-medium text-slate-500">Cart is empty</p>
                    <p class="text-xs text-slate-400 mt-1">Click a product to add</p>
                </div>
            }
        </div>

        <div class="p-5 border-t border-slate-200 bg-white">
            <div class="space-y-2 mb-5">
                <div class="flex justify-between items-center text-sm">
                    <span class="text-slate-500">Subtotal</span>
                    <span class="text-slate-900 font-medium">@_grandTotal.ToString("N0") <span class="text-xs text-slate-500">MMK</span></span>
                </div>
                <div class="flex justify-between items-center text-sm">
                    <span class="text-slate-500">Tax</span>
                    <span class="text-slate-900 font-medium">0 <span class="text-xs text-slate-500">MMK</span></span>
                </div>
                <div class="pt-3 border-t border-slate-100 flex justify-between items-center">
                    <span class="text-base font-semibold text-slate-900">Total</span>
                    <span class="text-2xl font-bold text-orange-600">@_grandTotal.ToString("N0") <span class="text-sm font-medium text-orange-400">MMK</span></span>
                </div>
            </div>

            <button @onclick="Save" disabled="@(!(_lstProductSale?.lstProductSale?.Any() ?? false))" 
                    class="w-full py-3 px-4 bg-orange-600 hover:bg-orange-700 disabled:bg-slate-100 disabled:text-slate-400 disabled:cursor-not-allowed text-white font-semibold rounded-lg transition-colors flex items-center justify-center gap-2 shadow-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                Checkout
            </button>
        </div>
    </div>
</div>

@code {
    private int GetQty(Guid productId) => _lstProductSale?.lstProductSale?.FirstOrDefault(x => x.product_id == productId)?.product_qty ?? 0;

    private async Task ProductNameChangeEvent(ChangeEventArgs e)
    {
        if (Guid.TryParse(e.Value?.ToString(), out var id))
        {
            _model.product_id = id;
            await ProductNameChange(id);
        }
    }
}