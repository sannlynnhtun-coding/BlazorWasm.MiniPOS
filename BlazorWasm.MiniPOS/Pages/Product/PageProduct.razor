@page "/setup/product"

<div class="space-y-6 animate-fade-in max-w-[1200px] mx-auto pb-8">
    @if (FormType == EnumFormType.List)
    {
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-8">
            <div>
                <h2 class="text-2xl font-semibold text-slate-900 tracking-tight">Products</h2>
                <p class="text-sm text-slate-500 mt-1">Manage your inventory items and pricing.</p>
            </div>
            <button @onclick="Create" class="inline-flex items-center justify-center px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white text-sm font-medium rounded-lg transition-colors shadow-sm">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
                Add Product
            </button>
        </div>

        <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
            @if (_productResponseModel?.products == null)
            {
                <div class="p-8 text-center text-slate-500 text-sm">Loading products...</div>
            }
            else if (!_productResponseModel.products.Any())
            {
                <div class="p-12 text-center flex flex-col items-center justify-center">
                    <svg class="w-12 h-12 text-slate-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>
                    <h3 class="text-lg font-medium text-slate-900 mb-1">No products found</h3>
                    <p class="text-slate-500 text-sm mb-4">Get started by creating a new product.</p>
                    <button @onclick="Create" class="text-orange-600 hover:text-orange-700 font-medium text-sm">Create Product &rarr;</button>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="w-full text-left text-sm whitespace-nowrap">
                        <thead class="bg-slate-50 border-b border-slate-200">
                            <tr>
                                <th class="px-6 py-3 font-semibold text-slate-700">Code</th>
                                <th class="px-6 py-3 font-semibold text-slate-700">Name</th>
                                <th class="px-6 py-3 font-semibold text-slate-700">Category</th>
                                <th class="px-6 py-3 font-semibold text-slate-700">Price <span class="text-xs font-normal text-slate-500">(MMK)</span></th>
                                <th class="px-6 py-3 font-semibold text-slate-700 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100">
                            @foreach (var item in _productResponseModel.products)
                            {
                                <tr class="hover:bg-slate-50/50 transition-colors">
                                    <td class="px-6 py-4">
                                        <div class="inline-flex items-center px-2 py-1 rounded bg-slate-100 text-slate-600 font-mono text-xs">
                                            @item.product_code
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 font-medium text-slate-900">@item.product_name</td>
                                    <td class="px-6 py-4">
                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-orange-50 text-orange-700">
                                            @(_lstProductCategory.FirstOrDefault(x => x.product_category_code == item.product_category_code)?.product_category_name ?? item.product_category_code)
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 font-medium text-slate-900">
                                        @item.product_sale_price.ToString("N0")
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <div class="flex items-center justify-end space-x-2">
                                            <button @onclick="() => Edit(item)" class="p-1 text-slate-400 hover:text-orange-600 transition-colors tooltip-trigger" title="Edit">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/></svg>
                                            </button>
                                            <button @onclick="() => Delete(item)" class="p-1 text-slate-400 hover:text-red-600 transition-colors tooltip-trigger" title="Delete">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 01-1 1v3M4 7h16"/></svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    }
    else
    {
        <div class="max-w-2xl mx-auto">
            <div class="flex items-center mb-6">
                <button @onclick="Back" class="mr-4 p-2 rounded-lg text-slate-500 hover:bg-slate-100 hover:text-slate-900 transition-colors focus:outline-none">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
                </button>
                <div>
                    <h2 class="text-2xl font-semibold text-slate-900 tracking-tight">@(IsEdit ? "Edit Product" : "New Product")</h2>
                    <p class="text-sm text-slate-500 mt-1">Fill in the product details.</p>
                </div>
            </div>

            <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-8">
                <EditForm Model="_model" OnValidSubmit="HandleSave">
                    <div class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-1.5">Product Code</label>
                                <InputText @bind-Value="_model.product_code" class="w-full px-4 py-2 bg-white border border-slate-300 rounded-lg text-sm text-slate-900 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-shadow disabled:bg-slate-50 disabled:text-slate-500" disabled="@IsEdit" />
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-1.5">Product Name</label>
                                <InputText @bind-Value="_model.product_name" class="w-full px-4 py-2 bg-white border border-slate-300 rounded-lg text-sm text-slate-900 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-shadow" />
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-1.5">Category</label>
                                <InputSelect @bind-Value="_model.product_category_code" class="w-full px-4 py-2 bg-white border border-slate-300 rounded-lg text-sm text-slate-900 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-shadow appearance-none">
                                    <option value="" disabled selected hidden>Select a category</option>
                                    @foreach (var item in _lstProductCategory)
                                    {
                                        <option value="@item.product_category_code">@item.product_category_name</option>
                                    }
                                </InputSelect>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-1.5">Price <span class="text-slate-400 font-normal">(MMK)</span></label>
                                <InputNumber @bind-Value="_model.product_sale_price" class="w-full px-4 py-2 bg-white border border-slate-300 rounded-lg text-sm text-slate-900 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-shadow" />
                            </div>
                        </div>

                        <div class="pt-6 border-t border-slate-100 flex justify-end space-x-3">
                            <button type="button" @onclick="Back" class="px-5 py-2.5 text-sm font-medium text-slate-700 bg-white border border-slate-300 hover:bg-slate-50 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-slate-200">
                                Cancel
                            </button>
                            <button type="submit" class="px-5 py-2.5 text-sm font-medium text-white bg-orange-600 hover:bg-orange-700 rounded-lg transition-colors shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2">
                                Save Product
                            </button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    }
</div>
