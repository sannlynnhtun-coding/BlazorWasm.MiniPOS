@page "/setup/product"

<div class="space-y-12 animate-fade-in max-w-[1500px] mx-auto">
    @if (FormType == EnumFormType.List)
    {
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-8 mb-12">
            <div>
                <h2 class="text-3xl font-outfit font-black text-gray-900 tracking-tight">Inventory Intelligence</h2>
                <p class="text-[10px] text-premium-orange-500 font-bold uppercase tracking-[0.2em] mt-2 opacity-80">Catalog Oversight â€¢ Real-time Valuation</p>
            </div>
            <button @onclick="Create" class="btn-premium px-10 py-4 shadow-premium-orange-lg hover:-translate-y-1 active:scale-95 transition-all">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3"><path d="M12 4v16m8-8H4"/></svg>
                <span class="text-sm uppercase tracking-widest">Register Product</span>
            </button>
        </div>

        <div class="card-premium shadow-premium-3 !p-0 overflow-hidden border-none bg-white">
            <div class="overflow-x-auto">
                <table class="table-premium">
                    <thead>
                        <tr class="bg-gray-50/50">
                            <th class="py-6 px-10">Product Definition</th>
                            <th class="py-6 px-10">Classification</th>
                            <th class="py-6 px-10 text-right">Acquisition</th>
                            <th class="py-6 px-10 text-right">Retail Value</th>
                            <th class="py-6 px-10 text-right">Operations</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-50">
                        @if (_productResponseModel?.products is { Count: > 0 })
                        {
                            @foreach (var item in _productResponseModel.products)
                            {
                                <tr class="hover:bg-gray-50/80 transition-premium group">
                                    <td class="py-6 px-10">
                                        <div class="flex items-center">
                                            <div class="w-16 h-16 bg-gradient-to-br from-premium-orange-50 to-premium-orange-100 text-premium-orange-600 rounded-2xl flex items-center justify-center mr-6 font-black text-lg shadow-sm group-hover:shadow-premium-orange-sm group-hover:scale-105 transition-all">
                                                @item.product_name?.Substring(0, 1)
                                            </div>
                                            <div>
                                                <div class="font-black text-gray-900 text-base">@item.product_name</div>
                                                <div class="text-[10px] text-gray-400 font-bold uppercase tracking-[0.2em] mt-1">Ref: @item.product_code</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-6 px-10">
                                        <div class="flex">
                                            <span class="badge-premium px-4 py-1.5 rounded-xl bg-premium-orange-50 text-premium-orange-700 text-[10px] font-black uppercase tracking-widest border-premium-orange-100">
                                                @item.product_category_code
                                            </span>
                                        </div>
                                    </td>
                                    <td class="py-6 px-10 text-right font-black text-gray-400 text-sm">
                                        @item.product_buying_price.ToString("N0") <small class="text-[9px] opacity-60">MMK</small>
                                    </td>
                                    <td class="py-6 px-10 text-right font-black text-premium-orange-600 text-lg tracking-tight">
                                        @item.product_sale_price.ToString("N0") <small class="text-[10px] opacity-80">MMK</small>
                                    </td>
                                    <td class="py-6 px-10 text-right">
                                        <div class="flex items-center justify-end space-x-3">
                                            <button @onclick="() => Edit(item)" class="icon-btn-premium w-10 h-10">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                                            </button>
                                            <button @onclick="() => Delete(item)" class="icon-btn-premium w-10 h-10 hover:!bg-red-50 hover:!border-red-200 hover:!text-red-600">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (_productResponseModel?.products is { Count: > 0 })
            {
                <div class="p-10 border-t-2 border-gray-50 flex justify-center bg-white shadow-inner">
                    <div class="flex items-center space-x-3">
                        @{
                            var pageInfo = _productResponseModel.pageSetting;
                            var curPage = pageInfo.pageNo;
                            var totalP = pageInfo.pageCount;
                        }

                        <button @onclick="() => List(curPage - 1)" 
                                disabled="@(curPage == 1)"
                                class="icon-btn-premium w-12 h-12 disabled:opacity-30 disabled:cursor-not-allowed">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3"><path d="M15 19l-7-7 7-7"/></svg>
                        </button>

                        @for (int i = 1; i <= totalP; i++)
                        {
                            var p = i;
                            <button @onclick="() => List(p)"
                                    class="w-12 h-12 rounded-2xl border-2 font-black text-sm transition-all @(curPage == p ? "bg-premium-orange-500 border-premium-orange-600 text-white shadow-premium-orange-sm" : "border-gray-100 text-gray-400 hover:border-premium-orange-300 hover:text-premium-orange-600 hover:bg-premium-orange-50/30")">
                                @p
                            </button>
                        }

                        <button @onclick="() => List(curPage + 1)" 
                                disabled="@(curPage == totalP)"
                                class="icon-btn-premium w-12 h-12 disabled:opacity-30 disabled:cursor-not-allowed">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3"><path d="M9 5l7 7-7 7"/></svg>
                        </button>
                    </div>
                </div>
            }
        </div>
    }
    else if (FormType is EnumFormType.Create or EnumFormType.Edit)
    {
        <div class="max-w-5xl mx-auto space-y-12">
            <div class="flex items-center">
                <button @onclick="Back" class="icon-btn-premium !w-16 !h-16 mr-8 shadow-premium-2 group hover:rotate-12 transition-all">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3"><path d="M15 19l-7-7 7-7"/></svg>
                </button>
                <div>
                    <h2 class="text-3xl font-outfit font-black text-gray-900 tracking-tight">@(FormType == EnumFormType.Create ? "New Asset Registration" : "Modify Asset Details")</h2>
                    <p class="text-[10px] text-premium-orange-500 font-bold uppercase tracking-[0.2em] mt-2 opacity-80">Inventory Specification Mode</p>
                </div>
            </div>

            <div class="card-premium shadow-premium-3 !p-16 relative overflow-hidden bg-white">
                <div class="absolute top-0 right-0 w-64 h-64 bg-premium-orange-50 rounded-full blur-3xl -mr-32 -mt-32 opacity-60"></div>
                
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 relative z-10">
                    <!-- Basic Info -->
                    <div class="space-y-10">
                        <div class="flex items-center space-x-4 mb-2">
                             <div class="w-8 h-8 bg-premium-orange-100 text-premium-orange-600 rounded-lg flex items-center justify-center font-black text-xs">01</div>
                             <h4 class="text-xs font-black text-gray-400 uppercase tracking-widest">Identification</h4>
                        </div>
                        <div class="space-y-3">
                            <label class="text-xs font-black text-gray-500 uppercase tracking-widest ml-1">Serial Number / Code</label>
                            <input type="text" class="input-premium py-5 px-6 rounded-2xl font-bold" @bind-value="_model.product_code" placeholder="ENTER SYSTEM ID" />
                        </div>
                        <div class="space-y-3">
                            <label class="text-xs font-black text-gray-500 uppercase tracking-widest ml-1">Asset Nomenclature</label>
                            <input type="text" class="input-premium py-5 px-6 rounded-2xl font-bold" @bind-value="_model.product_name" placeholder="ENTER PRODUCT NAME" />
                        </div>
                        <div class="space-y-3 relative">
                            <label class="text-xs font-black text-gray-500 uppercase tracking-widest ml-1">Master Category</label>
                            <div class="relative">
                                <select class="input-premium py-5 px-6 rounded-2xl font-bold appearance-none bg-no-repeat bg-[right_1.5rem_center] cursor-pointer" 
                                        style="background-image: url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%2224%22%20height%3D%2224%22%20viewBox%3D%220%200%2024%2024%22%20fill%3D%22none%22%20stroke%3D%22%239CA3AF%22%20stroke-width%3D%223%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%3E%3Cpath%20d%3D%22M6%209l6%206%206-6%22%2F%3E%3C%2Fsvg%3E');"
                                        value="@_productCategory.product_category_id"
                                        @onchange="ProductNameChangeEvent">
                                    @foreach (var item in _lstProductCategory)
                                    {
                                        <option value="@item.product_category_id">@item.product_category_name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Pricing Info -->
                    <div class="space-y-10">
                        <div class="flex items-center space-x-4 mb-2">
                             <div class="w-8 h-8 bg-blue-100 text-blue-600 rounded-lg flex items-center justify-center font-black text-xs">02</div>
                             <h4 class="text-xs font-black text-gray-400 uppercase tracking-widest">Financial Meta</h4>
                        </div>
                        <div class="space-y-3">
                            <label class="text-xs font-black text-gray-500 uppercase tracking-widest ml-1">Acquisition Cost (MMK)</label>
                            <div class="relative">
                                <input type="number" class="input-premium py-5 px-6 rounded-2xl font-black text-gray-500" @bind-value="_model.product_buying_price" />
                                <div class="absolute right-6 top-1/2 -translate-y-1/2 text-[10px] font-black text-gray-300 tracking-widest">MMK</div>
                            </div>
                        </div>
                        <div class="space-y-3">
                            <label class="text-xs font-black text-gray-500 uppercase tracking-widest ml-1">Retail Unit Price (MMK)</label>
                             <div class="relative">
                                <input type="number" class="input-premium py-5 px-6 rounded-2xl font-black text-premium-orange-600 bg-premium-orange-50/20" @bind-value="_model.product_sale_price" />
                                <div class="absolute right-6 top-1/2 -translate-y-1/2 text-[10px] font-black text-premium-orange-300 tracking-widest">MMK</div>
                            </div>
                        </div>
                        <div class="space-y-3">
                            <label class="text-xs font-black text-gray-500 uppercase tracking-widest ml-1">Registration Timestamp</label>
                            <input type="text" class="input-premium py-5 px-6 rounded-2xl !bg-gray-50/50 !border-gray-100 text-gray-400 font-bold" @bind-value="_model.product_creation_date" disabled />
                        </div>
                    </div>
                </div>

                <div class="mt-20 pt-10 border-t-2 border-gray-50 flex flex-col sm:flex-row justify-end gap-5 relative z-10">
                    <button @onclick="Back" class="px-10 py-5 bg-gray-50 text-gray-500 rounded-[1.25rem] font-black text-xs uppercase tracking-widest hover:bg-gray-100 transition-all active:scale-95">Discard Changes</button>
                    <button @onclick="@(FormType == EnumFormType.Create ? Save : Update)" 
                            class="btn-premium px-12 py-5 shadow-premium-orange-lg hover:-translate-y-1 active:scale-95 transition-all">
                        <span class="text-sm uppercase tracking-widest">@(FormType == EnumFormType.Create ? "Authorize Registration" : "Sync Modifications")</span>
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Product page specific styles removed - using global premium classes */
</style>
