@page "/generate-data"

<div class="max-w-[1000px] mx-auto space-y-8 animate-fade-in pb-12">
    <div class="mb-10">
        <h2 class="text-4xl font-black text-slate-900 tracking-tight">Data Simulation</h2>
        <p class="text-sm text-slate-500 mt-2 font-medium">Synthesize high-fidelity transaction records for stress testing and analytics.</p>
    </div>

    <div class="glass-card bg-white p-10 hover:transform-none shadow-2xl shadow-black/5 border border-slate-50">
        <div class="bg-orange-50/80 border border-orange-100 rounded-2xl p-8 flex items-start space-x-6 mb-10 transition-all hover:bg-orange-50">
            <div class="w-12 h-12 bg-white rounded-xl shadow-lg shadow-orange-500/10 flex items-center justify-center flex-shrink-0 text-orange-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            </div>
            <div>
                <h4 class="font-black text-orange-900 text-xs uppercase tracking-widest mb-2">Synthesis Protocol</h4>
                <p class="text-sm text-orange-700/80 leading-relaxed font-medium">This algorithm synthesizes valid transactional sequences across the specified temporal bounds. It leverages your current product state to interpolate randomized, statistically balanced sales historyâ€”ideal for calibrating business intelligence dashboards.</p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mb-10">
            <div class="space-y-3">
                <label class="text-[10px] font-black text-slate-500 uppercase tracking-[0.2em] ml-1">Temporal Start</label>
                <input type="date" class="w-full px-5 py-3.5 bg-slate-50 border border-slate-200 rounded-xl text-sm font-bold text-slate-900 focus:outline-none focus:ring-4 focus:ring-orange-500/10 focus:border-orange-500/50 transition-all" @bind-value="_startDate" />
            </div>
            <div class="space-y-3">
                <label class="text-[10px] font-black text-slate-500 uppercase tracking-[0.2em] ml-1">Temporal End</label>
                <input type="date" class="w-full px-5 py-3.5 bg-slate-50 border border-slate-200 rounded-xl text-sm font-bold text-slate-900 focus:outline-none focus:ring-4 focus:ring-orange-500/10 focus:border-orange-500/50 transition-all" @bind-value="_endDate" />
            </div>
        </div>

        @if (_isGenerating || _progress > 0)
        {
            <div class="mb-10 space-y-4 animate-scale-in">
                <div class="flex justify-between items-end">
                    <span class="text-[10px] font-black text-orange-600 uppercase tracking-widest">Compiling Records...</span>
                    <span class="text-xs font-black text-orange-600">@($"{_progress:F0}%")</span>
                </div>
                <div class="w-full bg-slate-100/50 rounded-full h-3 p-0.5 border border-slate-100 shadow-inner">
                    <div class="orange-gradient h-full rounded-full transition-all duration-300 shadow-lg shadow-orange-500/30" style="width: @(_progress)%"></div>
                </div>
            </div>
        }

        <div class="pt-8 border-t border-slate-100 flex justify-end">
            <button @onclick="GenerateDataByDate" disabled="@_isGenerating" 
                    class="btn btn-primary btn-lg btn--caps min-w-[200px]">
                @if (_isGenerating)
                {
                    <div class="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin mr-3"></div>
                    <span>Processing Protocol...</span>
                }
                else
                {
                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                    <span>Execute Synthesis</span>
                }
            </button>
        </div>
    </div>
</div>
